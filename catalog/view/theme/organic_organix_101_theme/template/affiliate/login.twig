{{ header }}
<div id="affiliate-login" class="container">
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}
  {% if error_warning %}
  <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
  {% endif %}
  <div class="adbreadcrumb">
        {#  <h1>{{ heading_title }}</h1> #}
        {% include 'organic_organix_101_theme/template/helpfile/breadcrumb.twig' with {'breadcrumbs': breadcrumbs} %} 
      </div>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-12 col-md-8 col-lg-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }} adaffiliate-login-wrapper">{{ content_top }}
      
      {{ text_description }}
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-6 adaffiliatelogin-inner-block">
          <div class="well">
            <h2>{{ text_new_affiliate }}</h2>
            <p>{{ text_register_account }}</p>
            <a class="btn badall-theme-button" href="{{ register }}">{{ button_continue }}</a></div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-6 adaffiliatelogin-inner-block-one">
          <div class="well">
            <h2>{{ text_returning_affiliate }}</h2>
            <p><strong>{{ text_i_am_returning_affiliate }}</strong></p>
            <form action="{{ action }}" method="post" enctype="multipart/form-data">
              <div class="form-group">
                <label class="control-label" for="input-email">{{ entry_email }}</label>
                <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
              </div>
              <div class="form-group">
                <label class="control-label" for="input-password">{{ entry_password }}</label>
                <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control" />
                <a href="{{ forgotten }}">{{ text_forgotten }}</a> </div>
              <input type="submit" value="{{ button_login }}" class="btn badall-theme-button adlogin-submit" />
              {% if redirect %}
              <input type="hidden" name="redirect" value="{{ redirect }}" />
              {% endif %}
            </form>
          </div>
        </div>
      </div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}