{{ header }}{{ column_left }}

<div id="content">

  <div class="page-header">

    <div class="container-fluid">

      <div class="pull-right">

        <button type="submit" form="form-imageslider" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>

        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>

      <h1>{{ heading_title }}</h1>

      <ul class="breadcrumb">

        {% for breadcrumb in breadcrumbs %}

        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>

        {% endfor %}

      </ul>

    </div>

  </div>

  <div class="container-fluid"> {% if error_warning %}

    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}

      <button type="button" class="close" data-dismiss="alert">&times;</button>

    </div>

    {% endif %}

    <div class="panel panel-default">

      <div class="panel-heading">

        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>

      </div>

      <div class="panel-body">

        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-imageslider" class="form-horizontal">

           

         

          <div class="tab-content">

            <div class="tab-pane active" id="tab-general">

              <ul class="nav nav-tabs" id="language">

                {% for language in languages %}

                <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>

                {% endfor %}

              </ul>

              <div class="tab-content">{% for language in languages %}

                <div class="tab-pane" id="language{{ language.language_id }}">

                  <div class="form-group">

                    <label class="col-sm-2 control-label" for="input-link{{ language.language_id }}">{{ column_url }}</label>

                    <div class="col-sm-10">

                      <input type="text" name="tntslider[{{ language.language_id }}][tntsliderchild_link]" value="{{ tntslider[language.language_id] ? tntslider[language.language_id].tntsliderchild_link }}" class="form-control" placeholder="{{ column_url }}" id="input-name{{ language.language_id }}" />

                      </div>

                  </div>

                  <div class="form-group">

                    <label class="col-sm-2 control-label" for="input-tntsliderchild_title{{ language.language_id }}">{{ column_title }}</label>

                    <div class="col-sm-10">

                      <input type="text" name="tntslider[{{ language.language_id }}][tntsliderchild_title]" value="{{ tntslider[language.language_id] ? tntslider[language.language_id].tntsliderchild_title }}" placeholder="{{ column_title }}" id="input-name{{ language.language_id }}" class="form-control" />

                      <input type="hidden" name="tntslider[{{ language.language_id }}][lang]" value="{{ language.language_id }}" placeholder="{{ column_title }}" id="input-name{{ language.language_id }}" class="form-control" />

                      {% if error_title[language.language_id] %}

                      <div class="text-danger">{{ error_title[language.language_id] }}</div>

                      {% endif %} </div>

                  </div>
                  <div class="form-group">

                    <label class="col-sm-2 control-label" for="input-tntsliderchild_title{{ language.language_id }}">{{ column_subtitle }}</label>

                    <div class="col-sm-10">

                      <input type="text" name="tntslider[{{ language.language_id }}][tntsliderchild_subtitle]" value="{{ tntslider[language.language_id] ? tntslider[language.language_id].tntsliderchild_subtitle }}" placeholder="{{ column_subtitle }}" id="input-name{{ language.language_id }}" class="form-control" />

                      <input type="hidden" name="tntslider[{{ language.language_id }}][lang]" value="{{ language.language_id }}" placeholder="{{ column_subtitle }}" id="input-name{{ language.language_id }}" class="form-control" />

                      {% if error_subtitle[language.language_id] %}

                      <div class="text-danger">{{ error_subtitle[language.language_id] }}</div>

                      {% endif %} </div>

                  </div>
                 

                  <div class="form-group">

                    <label class="col-sm-2 control-label" for="input-tntsliderchild_description{{ language.language_id }}">{{ column_description }}</label>

                    <div class="col-sm-10">

                      <input type="text" name="tntslider[{{ language.language_id }}][tntsliderchild_description]" value="{{ tntslider[language.language_id] ? tntslider[language.language_id].tntsliderchild_description }}" placeholder="{{ column_description }}" id="input-tntsliderchild_description{{ language.language_id }}" class="form-control" />

                    </div>

                  </div>

                  <div class="form-group">

                    <label class="col-sm-2 control-label" for="input-tntsliderchild_image{{ language.language_id }}">{{ column_image }}</label>

                    <div class="col-sm-10">

                      <a href="" id="thumb-image{{ language.language_id }}" data-toggle="image" class="img-thumbnail">

                        <img src="{{ image[language.language_id] }}" alt="" title="" data-placeholder="{{ placeholder }}" />

                      </a>

                        <input type="hidden" name="tntslider[{{ language.language_id }}][tntsliderchild_image]" value="{{ tntslider[language.language_id] ? tntslider[language.language_id].tntsliderchild_image }}" id="input-tntsliderchild_image{{ language.language_id }}" />

                      {% if error_image[language.language_id] %}

                      <div class="text-danger">{{ error_image[language.language_id] }}</div>

                      {% endif %}

                    </div>

                  </div>

                 

                  <div class="form-group">

                    <label class="col-sm-2 control-label" for="input-tntsliderchild_textaligment{{ language.language_id }}">{{ column_alignment }}</label>

                    <div class="col-sm-10">                      

                      <label class="radio-inline">





                        <input type="radio"  {% if tntslider[language.language_id].tntsliderchild_textaligment == 'left' %} checked="checked" {% endif %} name="tntslider[{{ language.language_id }}][tntsliderchild_textaligment]"  value="left"/>

                        {{ text_left }}

                      </label>

                      <label class="radio-inline">

                        <input type="radio" {% if tntslider[language.language_id].tntsliderchild_textaligment == 'center' %} checked="checked" {% endif %} name="tntslider[{{ language.language_id }}][tntsliderchild_textaligment]" value="center"/>

                        {{ text_center }}

                      </label>

                      <label class="radio-inline">

                        <input type="radio" {% if tntslider[language.language_id].tntsliderchild_textaligment == 'right' %} checked="checked" {% endif %} name="tntslider[{{ language.language_id }}][tntsliderchild_textaligment]" value="right"/>

                        {{ text_right }}

                      </label>

                      <label class="radio-inline">

                        <input type="radio" {% if tntslider[language.language_id].tntsliderchild_textaligment == 'hide' %} checked="checked" {% endif %} name="tntslider[{{ language.language_id }}][tntsliderchild_textaligment]" value="hide"/>

                        {{ text_hide }}

                      </label>

                    </div>

                  </div>

                  <div class="form-group">

                    <label class="col-sm-2 control-label" for="input-tntsliderchild_buttontext{{ language.language_id }}">{{ column_buttontext }}</label>

                    <div class="col-sm-10">

                      <input type="text" name="tntslider[{{ language.language_id }}][tntsliderchild_buttontext]" value="{{ tntslider[language.language_id] ? tntslider[language.language_id].tntsliderchild_buttontext }}" placeholder="{{ column_buttontext }}" id="input-name{{ language.language_id }}" class="form-control" />

                    </div>

                  </div>

                  

                  <div class="form-group">

                    <label class="col-sm-2 control-label" for="input-statusa{{ language.language_id }}">{{ column_status }}</label>

                    <div class="col-sm-10">

                      <select name="tntslider[{{ language.language_id }}][tntsliderchild_enable]" id="input-tntsliderchild_enable" class="form-control">



                        {% if tntslider[language.language_id].tntsliderchild_enable %}

                          <option value="1" selected="selected">{{ text_enabled }}</option>

                          <option value="0">{{ text_disabled }}</option>

                        {% else %}

                          <option value="1">{{ text_enabled }}</option>

                          <option value="0" selected="selected">{{ text_disabled }}</option>

                        {% endif %}

                      </select>

                    </div>

                  </div>                 

                </div>

                {% endfor %}</div>

            </div>

          </div>

        </form>

      </div>

    </div>

  </div>



  <script type="text/javascript" src="view/javascript/summernote/summernote.js"></script>

  <link href="view/javascript/summernote/summernote.css" rel="stylesheet" />

  <script type="text/javascript" src="view/javascript/summernote/summernote-image-attributes.js"></script>

  <script type="text/javascript" src="view/javascript/summernote/opencart.js"></script>

  <script type="text/javascript"><!--

    $('#language a:first').tab('show');

//--></script>



</div>

{{ footer }}