{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-imageslider" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid"> {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-imageslider" class="form-horizontal">
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-feature_image">{{ entry_url }}</label>
                <div class="col-sm-10">
                     <input type="text" name="tntblogcategory_urlrewrite" value="{{ tntblogcategory_urlrewrite ? tntblogcategory_urlrewrite }}" class="form-control" placeholder="{{ entry_url }}" id="input-name" />
                       
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-feature_image">{{ entry_catefeatureimg }}</label>
                <div class="col-sm-10">
                      <a href="" id="thumb-feature_image" data-toggle="image" class="img-thumbnail">
                        <img src="{{ featureimage }}" alt="" title="" data-placeholder="{{ placeholder }}" />
                      </a>
                        <input type="hidden" name="tntblogcategory_featureimage" value="{{ tntblogcategory_featureimage ? tntblogcategory_featureimage }}" id="input-main_featureimage" />
                </div>
              </div>
              
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-category">{{ entry_selectcategroup }}</label>
                <div class="col-sm-10">
                  <select name="tntblogcategory_deafultcategory" id="input-status" class="form-control">
                    {% for categorydata in category_info %}
                        <option {% if tntblogcategory_deafultcategory == categorydata.tntblogcategory_id %} selected="selected" {% endif %} value="{{ categorydata.tntblogcategory_id }}">{{ categorydata.tntblogcategory_sub_title }}</option>
                      {% endfor %}
                  </select>
                </div>
              </div>
              
             
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-mainstatus">{{ entry_status }}</label>
                <div class="col-sm-10">
                     <select name="tntblogcategory_status" id="input-status" class="form-control">
                        {% if tntblogcategory_status %}
                          <option value="1" selected="selected">{{ text_enabled }}</option>
                          <option value="0">{{ text_disabled }}</option>
                        {% else %}
                          <option value="1">{{ text_enabled }}</option>
                          <option value="0" selected="selected">{{ text_disabled }}</option>
                        {% endif %}
                      </select>
                </div>
              </div>
             


              <ul class="nav nav-tabs" id="language">
                {% for language in languages %}
                <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                {% endfor %}
              </ul>
              <div class="tab-content">{% for language in languages %}
                <div class="tab-pane" id="language{{ language.language_id }}">

                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-title{{ language.language_id }}">{{ entry_category_name }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tntblogcategoryform[{{ language.language_id }}][tntblogcategory_sub_title]" value="{{ tntblogcategoryform[language.language_id] ? tntblogcategoryform[language.language_id].tntblogcategory_sub_title }}" class="form-control" placeholder="{{ entry_category_name }}" id="input-name{{ language.language_id }}" />
                        {% if error_title[language.language_id] %}
                        <div class="text-danger">{{ error_title[language.language_id] }}</div>
                        {% endif %}</div>
                    </div>
                  
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-subtitle{{ language.language_id }}">{{ entry_category_des }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tntblogcategoryform[{{ language.language_id }}][tntblogcategory_sub_categorydes]" value="{{ tntblogcategoryform[language.language_id] ? tntblogcategoryform[language.language_id].tntblogcategory_sub_categorydes }}" placeholder="{{ entry_category_des }}" id="input-name{{ language.language_id }}" class="form-control" />
                        <input type="hidden" name="tntblogcategoryform[{{ language.language_id }}][tntblogcategory_sublang_id]" value="{{ language.language_id }}"   class="form-control" />
                         </div>
                    </div>
                   
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-link{{ language.language_id }}">{{ entry_meta_title }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tntblogcategoryform[{{ language.language_id }}][tntblogcategory_sub_metatitle]" value="{{ tntblogcategoryform[language.language_id] ? tntblogcategoryform[language.language_id].tntblogcategory_sub_metatitle }}" placeholder="{{ entry_meta_title }}" id="input-link{{ language.language_id }}" class="form-control" />
                      </div>
                    </div>
                    
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-link{{ language.language_id }}">{{ entry_meta_description }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tntblogcategoryform[{{ language.language_id }}][tntblogcategory_sub_metades]" value="{{ tntblogcategoryform[language.language_id] ? tntblogcategoryform[language.language_id].tntblogcategory_sub_metades }}" placeholder="{{ entry_meta_description }}" id="input-link{{ language.language_id }}" class="form-control" />
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-link{{ language.language_id }}">{{ entry_meta_keyword }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tntblogcategoryform[{{ language.language_id }}][tntblogcategory_sub_metakeyword]" value="{{ tntblogcategoryform[language.language_id] ? tntblogcategoryform[language.language_id].tntblogcategory_sub_metakeyword }}" placeholder="{{ entry_meta_keyword }}" id="input-link{{ language.language_id }}" class="form-control" />
                      </div>
                    </div>
                </div>
                {% endfor %}</div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="view/javascript/summernote/summernote.js"></script>
  <link href="view/javascript/summernote/summernote.css" rel="stylesheet" />
  <script type="text/javascript" src="view/javascript/summernote/summernote-image-attributes.js"></script>
  <script type="text/javascript" src="view/javascript/summernote/opencart.js"></script>
  <script type="text/javascript"><!--
    $('#language a:first').tab('show');
//--></script>


</div>
{{ footer }}