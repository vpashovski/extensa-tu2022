{{ header }}{{ column_left }}

<div id="content">

  <div class="page-header">

    <div class="container-fluid">

      <div class="pull-right">

        <button type="submit" form="form-imageslider" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>

        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>

      </div>

      <h1>{{ heading_title }}</h1>

      <ul class="breadcrumb">

        {% for breadcrumb in breadcrumbs %}

        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>

        {% endfor %}

      </ul>

    </div>

  </div>

  <div class="container-fluid">

    {% if error_warning %}

      <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}

        <button type="button" class="close" data-dismiss="alert">&times;</button>

      </div>

    {% endif %}



    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-imageslider" class="form-horizontal">

      <div class="panel panel-default">

        <div class="panel-heading">

          <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>

        </div>

        <div class="panel-body">

            <div class="form-group ">

                <label class="col-sm-2 control-label" for="input-statusa{{ language.language_id }}">{{ column_status }}</label>

                <div class="col-sm-10">

                  <select name="tnttestimonialparent_status" id="input-tnttestimonialparent_status" class="form-control">

                    {% if tnttestimonialparent_status %}

                      <option value="1" selected="selected">{{ text_enabled }}</option>

                      <option value="0">{{ text_disabled }}</option>

                    {% else %}

                      <option value="1">{{ text_enabled }}</option>

                      <option value="0" selected="selected">{{ text_disabled }}</option>

                    {% endif %}

                  </select>

                </div>

            </div> 



            <div class="form-group ">

                <label class="col-sm-2 control-label" for="input-tnttestimonialparent_link{{ language.language_id }}">{{ text_link }}</label>

                <div class="col-sm-10">

                  <input type="text" name="tnttestimonialparent_link" value="{{ tnttestimonialparent_link }}" placeholder="{{ text_link }}" id="input-tnttestimonialparent_link" class="form-control" />

                </div>

            </div> 

            <div class="form-group ">

                <label class="col-sm-2 control-label" for="input-tnttestimonialparent_image{{ language.language_id }}">{{ text_image }}</label>

                <div class="col-sm-10">

                  <a href="" id="thumb-image_main" data-toggle="image" class="img-thumbnail">

                    <img src="{{ image_thumb }}" alt="" title="" data-placeholder="{{ image_thumb }}" />

                  </a>

                  <input type="hidden" name="tnttestimonialparent_image" value="{{ tnttestimonialparent_image ? tnttestimonialparent_image }}" id="input-image_main" />

                </div>

            </div> 



          <div class="tab-content">

              <div class="tab-pane active" id="tab-general">

                  <ul class="nav nav-tabs" id="language">

                    {% for language in languages %}

                    <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>

                    {% endfor %}

                  </ul>

                <div class="tab-content">{% for language in languages %}

                  <div class="tab-pane" id="language{{ language.language_id }}">

                    <div class="form-group ">

                      <label class="col-sm-2 control-label" for="input-tnttestimonialchild_name{{ language.language_id }}">{{ column_name }}</label>

                      <div class="col-sm-10">

                        <input type="text" name="tnttestimonial[{{ language.language_id }}][tnttestimonialchild_name]" value="{{ tnttestimonial[language.language_id] ? tnttestimonial[language.language_id].tnttestimonialchild_name }}" placeholder="{{ column_name }}" id="input-name{{ language.language_id }}" class="form-control" />



                        <input type="hidden" name="tnttestimonial[{{ language.language_id }}][lang]" value="{{ language.language_id }}" placeholder="{{ column_name }}" id="input-name{{ language.language_id }}" class="form-control" />

                      </div>

                    </div>

                    <div class="form-group">

                      <label class="col-sm-2 control-label" for="input-tnttestimonialchild_description{{ language.language_id }}">{{ column_description }}</label>

                      <div class="col-sm-10">

                        <input type="text" name="tnttestimonial[{{ language.language_id }}][tnttestimonialchild_description]" value="{{ tnttestimonial[language.language_id] ? tnttestimonial[language.language_id].tnttestimonialchild_description }}" placeholder="{{ column_description }}" id="input-name{{ language.language_id }}" class="form-control" />

                      </div>

                    </div>

                    <div class="form-group">

                      <label class="col-sm-2 control-label" for="input-tnttestimonialchild_designation{{ language.language_id }}">{{ column_designation }}</label>

                      <div class="col-sm-10">

                        <input type="text" name="tnttestimonial[{{ language.language_id }}][tnttestimonialchild_designation]" value="{{ tnttestimonial[language.language_id] ? tnttestimonial[language.language_id].tnttestimonialchild_designation }}" placeholder="{{ column_designation }}" id="input-name{{ language.language_id }}" class="form-control" />

                      </div>

                    </div>

                  </div>

                  {% endfor %}</div>

              </div>

          </div>

        </div>

      </div>

    </form>

  </div>



  <script type="text/javascript" src="view/javascript/summernote/summernote.js"></script>

  <link href="view/javascript/summernote/summernote.css" rel="stylesheet" />

  <script type="text/javascript" src="view/javascript/summernote/summernote-image-attributes.js"></script> 

  <script type="text/javascript" src="view/javascript/summernote/opencart.js"></script> 

  <script type="text/javascript"><!--

    $('#language a:first').tab('show');

//--></script></div>

{{ footer }}