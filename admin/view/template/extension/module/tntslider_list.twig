  <script type="text/javascript"><!--



$(document).ready(function(){

  



  function removeTags(){

      setTimeout(function() {

          $(".tntslider-position-update").remove();

        }, 3000);

    }



  var urll = 'index.php?route=extension/module/tntslider/sorting&user_token={{ user_token }}&action=editdataposition&';



  var obj  = $(document).find('body');

      

  $(".tntslider tbody").sortable({

    opacity: 0.6,

    cursor: 'move',

    update: function() {

        var order = $(this).sortable("serialize");

        var qq = urll + '' + order;

        console.log(qq);

        $.post(qq, order, function(data) {

            var arr_data = data.split('##');



            var result = arr_data[0];



            var notic = 'Position is Updated.';

            if (result == 'right') {

                var tags = '';



                tags += '<div id="growls" class="alert alert-success alert-dismissible default tntslider-position-update"><i class="fa fa-check-circle"></i> '+ notic +'<button type="button" class="close" data-dismiss="alert">&times;</button>';

                tags += '</div>';



                obj.find('#growls').html(tags);

                removeTags();

            }

        });

    }

  });

});









$('#button-filter').on('click', function() {

    var url = '';



    var filter_name = $('input[name=\'filter_name\']').val();



    if (filter_name) {

        url += '&filter_name=' + encodeURIComponent(filter_name);

    }



    var filter_status = $('select[name=\'filter_status\']').val();



    if (filter_status !== '') {

        url += '&filter_status=' + encodeURIComponent(filter_status);

    }



    location = 'index.php?route=extension/module/tntslider&user_token={{ user_token }}' + url;

});





 $('button[form=\'form-tntslider\']').on('click', function(e) {

  $('#form-tntslider').attr('action', $(this).attr('formaction'));

});



  





