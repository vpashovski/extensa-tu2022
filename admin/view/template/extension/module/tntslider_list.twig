{{ header }}{{ column_left }}

<div id="content">

  <div class="page-header">

    <div class="container-fluid">

      <div class="pull-right">

    

        <button type="button" data-toggle="tooltip" title="{{ button_filter }}" onclick="$('#filter-tntslider').toggleClass('hidden-sm hidden-xs');" class="btn btn-default hidden-md hidden-lg"><i class="fa fa-filter"></i></button>

          <a href="{{ add }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>

        <button type="submit" form="form-tntslider" formaction="{{ copy }}" data-toggle="tooltip" title="{{ button_copy }}" class="btn btn-default"><i class="fa fa-copy"></i></button>

        <button type="button" form="form-tntslider" formaction="{{ delete }}" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger" onclick="confirm('{{ text_confirm }}') ? $('#form-tntslider').submit() : false;"><i class="fa fa-trash-o"></i></button>



      </div>

      <h1>{{ heading_title }}</h1>

      <ul class="breadcrumb">

        {% for breadcrumb in breadcrumbs %}

        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>

        {% endfor %}

      </ul>

    </div>

  </div>

  <div class="container-fluid">{% if error_warning %}

    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}

      <button type="button" class="close" data-dismiss="alert">&times;</button>

    </div>

    {% endif %}

    <div id="growls" class="default"></div>

    {% if success %}

    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}

      <button type="button" class="close" data-dismiss="alert">&times;</button>

    </div>

    {% endif %}

      <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-imageslider" class="form-horizontal">



      <div class="panel panel-default">

        <div class="panel-heading">

          <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_setting }}</h3>

        </div>

        <div class="panel-body">

          <div class="form-group">

            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>

            <div class="col-sm-10">

              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />

              {% if error_name %}

              <div class="text-danger">{{ error_name }}</div>

              {% endif %}

            </div>

          </div>   

          <div class="form-group"> 

            <label class="col-sm-2 control-label" for="input-status">{{ column_status }}</label>

            <div class="col-sm-10">

              <select name="status" id="input-status" class="form-control">

                {% if status %}

                <option value="1" selected="selected">{{ text_enabled }}</option>

                <option value="0">{{ text_disabled }}</option>

                {% else %}

                <option value="1">{{ text_enabled }}</option>

                <option value="0" selected="selected">{{ text_disabled }}</option>

                {% endif %}

              </select>

            </div>

          </div>



          <div class="form-group">

            <label class="col-sm-2 control-label" for="input-speed">{{ entry_speed }}</label>

            <div class="col-sm-10">

              <input type="text" name="speed" value="{{ speed }}" placeholder="{{ entry_speed }}" id="input-name" class="form-control" /><span class="input-group-addon">

                      milliseconds

                    </span>

              {{ entry_speeddescription }}

            </div>

          </div>   

          



          <div class="form-group"> 

            <label class="col-sm-2 control-label" for="input-hover">{{ entry_hover }}</label>

            <div class="col-sm-10">

              <select name="hover" id="input-hover" class="form-control">

                {% if hover %}

                <option value="1" selected="selected">{{ text_enabled }}</option>

                <option value="0">{{ text_disabled }}</option>

                {% else %}

                <option value="1">{{ text_enabled }}</option>

                <option value="0" selected="selected">{{ text_disabled }}</option>

                {% endif %}

              </select>

              {{ entry_hoverdescription }}

            </div>

          </div>



           <div class="form-group"> 

            <label class="col-sm-2 control-label" for="input-loop">{{ entry_loop }}</label>

            <div class="col-sm-10">

              <select name="loop" id="input-loop" class="form-control">

                {% if loop %}

                <option value="1" selected="selected">{{ text_enabled }}</option>

                <option value="0">{{ text_disabled }}</option>

                {% else %}

                <option value="1">{{ text_enabled }}</option>

                <option value="0" selected="selected">{{ text_disabled }}</option>

                {% endif %}

              </select>

              {{ entry_loopdescription }}

            </div>

          </div>



          <div class="form-group"> 

            <label class="col-sm-2 control-label" for="input-animationslider">{{ entry_slideranimation }}</label>

            <div class="col-sm-10">

              <select name="animationslider" id="input-animationslider" class="form-control">

                {% if animationslider %}

                <option value="1" selected="selected">{{ text_enabled }}</option>

                <option value="0">{{ text_disabled }}</option>

                {% else %}

                <option value="1">{{ text_enabled }}</option>

                <option value="0" selected="selected">{{ text_disabled }}</option>

                {% endif %}

              </select>

              {{ entry_slideranimationanimationdescription }}

            </div>

          </div>



          <div class="form-group"> 

            <div class="col-sm-12">    



              <button type="submit" form="form-imageslider" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>

            </div>

          </div>

        </div>

      </div>

    </form>

    <div class="row">

      <div id="filter-tntslider" class="col-md-3 col-md-push-9 col-sm-12 hidden-sm hidden-xs">

        <div class="panel panel-default">

          <div class="panel-heading">

            <h3 class="panel-title"><i class="fa fa-filter"></i> {{ text_filter }}</h3>

          </div>

          <div class="panel-body">

            <div class="form-group">

              <label class="control-label" for="input-name">{{ column_title }}</label>

              <input type="text" name="filter_name" value="{{ filter_name }}" placeholder="{{ column_title }}" id="input-name" class="form-control" />

            </div>

            

            <div class="form-group">

              <label class="control-label" for="input-status">{{ column_status }}</label>

              <select name="filter_status" id="input-status" class="form-control">

                <option value=""></option>

                {% if filter_status == '1' %}

                <option value="1" selected="selected">{{ text_enabled }}</option>

                {% else %}

                <option value="1">{{ text_enabled }}</option>

                {% endif %}

                {% if filter_status == '0' %}

                  <option value="0" selected="selected">{{ text_disabled }}</option>

                    {% else %}

                  <option value="0">{{ text_disabled }}</option>

                {% endif %}                    

              </select>

            </div>

            <div class="form-group text-right">

              <button type="button" id="button-filter" class="btn btn-default"><i class="fa fa-filter"></i> {{ button_filter }}</button>

            </div>

          </div>

        </div>

      </div>

      <div class="col-md-9 col-md-pull-3 col-sm-12">

        <div class="panel panel-default">

          <div class="panel-heading">

            <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>

          </div>

          <div class="panel-body">

            <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-tntslider">

              <div class="table-responsive">

                <table class="table table-bordered table-hover tntslider">

                  <thead>

                    <tr>

                      <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>

                      <td class="text-center">{{ column_image }}</td>



                      <td class="text-left">{% if sort == 'pd.tntsliderstitle' %} <a href="{{ sort_tntslider_title }}" class="{{ order|lower }}">{{ column_title }}</a> {% else %} <a href="{{ sort_tntslider_title }}">{{ column_title }}</a> {% endif %}</td>

                      <td class="text-left">{% if sort == 'pd.tntsliderssubtitle' %} <a href="{{ sort_tntslider_subtitle }}" class="{{ order|lower }}">{{ column_subtitle }}</a> {% else %} <a href="{{ sort_tntslider_subtitle }}">{{ column_subtitle }}</a> {% endif %}</td>


                      <td class="text-left">{% if sort == 'p.tntslider_link' %} <a href="{{ sort_tntslider_link }}" class="{{ order|lower }}">{{ column_url }}</a> {% else %} <a href="{{ sort_tntslider_link }}">{{ column_url }}</a> {% endif %}</td>



                      <td class="text-left">{% if sort == 'pd.tntslider_textaligment' %} <a href="{{ sort_tntslider_textaligment }}" class="{{ order|lower }}">{{ column_alignment }}</a> {% else %} <a href="{{ sort_tntslider_textaligment }}">{{ column_alignment }}</a> {% endif %}</td>



                      <td class="text-left">{% if sort == 'pd.tntslider_buttontext' %} <a href="{{ sort_tntslider_buttontext }}" class="{{ order|lower }}">{{ column_buttontext }}</a> {% else %} <a href="{{ sort_tntslider_buttontext }}">{{ column_buttontext }}</a> {% endif %}</td>



                     



                       <td class="text-left">{% if sort == 'pd.sort_tntslider_description' %} <a href="{{ sort_sort_tntslider_description }}" class="{{ order|lower }}">{{ column_description }}</a> {% else %} <a href="{{ sort_sort_tntslider_description }}">{{ column_description }}</a> {% endif %}</td>



                      <td class="text-left">{% if sort == 'pd.tntslider_enable' %} <a href="{{ sort_tntslider_enable }}" class="{{ order|lower }}">{{ column_status }}</a> {% else %} <a href="{{ sort_tntslider_enable }}">{{ column_status }}</a> {% endif %}</td>



                      <td class="text-left">{{ column_action }}</td>

                    </tr>

                  </thead>

                  <tbody>

                    {% if sliderdata %}

                    {% for imageslider in sliderdata %}

                      <tr id="recordsArray_{{ imageslider.id }}">

                        <td class="text-center">{% if imageslider.id in selected %}

                          <input type="checkbox" name="selected[]" value="{{ imageslider.id }}" checked="checked" />

                          {% else %}

                          <input type="checkbox" name="selected[]" value="{{ imageslider.id }}" />

                          {% endif %}</td>

                        <td class="text-center">{% if imageslider.image %} <img src="{{ imageslider.image }}" alt="{{ imageslider.title }}" class="img-thumbnail" /> {% else %} <span class="img-thumbnail list"><i class="fa fa-camera fa-2x"></i></span> {% endif %}</td>

                        <td class="text-left">{{ imageslider.title }}</td>
                        <td class="text-left">{{ imageslider.subtitle }}</td>

                        <td class="text-left">{{ imageslider.link }}</td>

                        <td class="text-left">{{ imageslider.aling }}</td>

                        <td class="text-left">{{ imageslider.buttontext }}</td>

                        <td class="text-left">{{ imageslider.description }}</td>

                        <td class="text-left">{{ imageslider.status }}</td>

                        <td class="text-right"><a href="{{ imageslider.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a></td>



                      </tr>

                    {% endfor %}

                    {% else %}

                  <tr>

                    <td class="text-center" colspan="10">{{ text_no_results }}</td>

                  </tr>

                  {% endif %}

                    </tbody>                  

                </table>

                

              </div>

            </form>

            <div class="row">

              <div class="col-sm-6 text-left">{{ pagination }}</div>

              <div class="col-sm-6 text-right">{{ results }}</div>

            </div>

          </div>

        </div>

      </div>

    </div>

  </div>

  <script type="text/javascript" src="view/javascript/adminthemejs/jquery.ui.core.min.js"></script> 

  <script type="text/javascript" src="view/javascript/adminthemejs/jquery.ui.widget.min.js"></script> 

  <script type="text/javascript" src="view/javascript/adminthemejs/jquery.ui.mouse.min.js"></script> 

