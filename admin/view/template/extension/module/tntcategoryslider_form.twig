{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-imageslider" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid"> {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-imageslider" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-link{{ language.language_id }}">{{ column_image }}</label>
            <div class="col-sm-10">
              <a href="" id="thumb-image" data-toggle="image" class="img-thumbnail">
                <img src="{{ thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" />
              </a>
              <input type="hidden" name="tntcategorysliderparent_image" value="{{ tntcategorysliderparent_image }}" id="input-tntcategorysliderparent_image" />
              {% if error_tntcategorysliderparent_image %}
                <div class="text-danger">{{ error_tntcategorysliderparent_image }}</div>
              {% endif %}
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-link{{ language.language_id }}">{{ entry_category }}</label>
            <div class="col-sm-10">
              <select name="tntcategorysliderparent_category_id" id="input-tntcategorysliderparent_category_id" class="form-control">
                <option value="">{{ text_select }}</option>                
                {% for categor in category %} 
                  <option  {% if tntcategorysliderparent_category_id == categor.category_id %} selected="selected" {% endif %} value="{{ categor.category_id }}">{{ categor.name }}</option>
                {% endfor %}                
              </select>    
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-link{{ language.language_id }}">{{ column_status }}</label>
            <div class="col-sm-10">
              
              <select name="tntcategorysliderparent_status" id="input-tntcategorysliderparent_status" class="form-control">
                {% if tntcategorysliderparent_status %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>

              </div>

          </div>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
             
                <ul class="nav nav-tabs" id="language">
                  {% for language in languages %}
                  <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                  {% endfor %}
                </ul>
             
              <div class="tab-content">{% for language in languages %}
                <div class="tab-pane" id="language{{ language.language_id }}">
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-tntcategorysliderchild_name{{ language.language_id }}">{{ entry_customname }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="tntcategoryslider[{{ language.language_id }}][tntcategorysliderchild_name]" value="{{ tntcategoryslider[language.language_id] ? tntcategoryslider[language.language_id].tntcategorysliderchild_name }}" placeholder="{{ entry_customname }}" id="input-name{{ language.language_id }}" class="form-control" />
                      <input type="hidden" name="tntcategoryslider[{{ language.language_id }}][lang]" value="{{ language.language_id }}" placeholder="{{ entry_customname }}" id="input-name{{ language.language_id }}" class="form-control" />
                      {% if error_title[language.language_id] %}
                      <div class="text-danger">{{ error_title[language.language_id] }}</div>
                      {% endif %} </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-tntcategorysliderchild_description{{ language.language_id }}">{{ column_description }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="tntcategoryslider[{{ language.language_id }}][tntcategorysliderchild_description]"
                       value="{{ tntcategoryslider[language.language_id] ? tntcategoryslider[language.language_id].tntcategorysliderchild_description }}"
                        placeholder="{{ column_description }}" id="input-name{{ language.language_id }}" class="form-control" />
                    </div>
                  </div>

                </div>
                {% endfor %}</div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="view/javascript/summernote/summernote.js"></script>
  <link href="view/javascript/summernote/summernote.css" rel="stylesheet" />
  <script type="text/javascript" src="view/javascript/summernote/summernote-image-attributes.js"></script> 
  <script type="text/javascript" src="view/javascript/summernote/opencart.js"></script> 
  <script type="text/javascript"><!--
    $('#language a:first').tab('show');
    $('#option a:first').tab('show');
//--></script></div>
{{ footer }} 