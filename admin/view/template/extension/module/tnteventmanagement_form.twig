{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-imageslider" data-toggle="tooltip" title="{{ button_save }}" class="button button-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="button button-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid"> {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}

    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-imageslider" class="form-horizontal">

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
        </div>
        <div class="panel-body">

            <div class="form-group ">
              <label class="col-sm-2 control-label" for="input-statusa{{ language.language_id }}">{{ column_status }}</label>
              <div class="col-sm-10">
                <select name="tnteventmanagement_status" id="input-tnteventmanagement_status" class="form-control">
                  {% if tnteventmanagement_status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                  {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                </select>
              </div>
            </div> 

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-link">{{ column_start_date }}</label>
              <div class="col-sm-10 date">
                <div class="input-group date">
                  <input type="text" name="tnteventmanagementparent_start_date" value="{{ tnteventmanagementparent_start_date }}" data-date-format="YYYY-MM-DD" id="input-option" class="form-control" />
                  <span class="input-group-btn">
                  <button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button>
                  </span>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-link">{{ column_end_date }}</label>
              <div class="col-sm-10 date">
                <div class="input-group date">
                  <input type="text" name="tnteventmanagementparent_end_date" value="{{ tnteventmanagementparent_end_date }}" data-date-format="YYYY-MM-DD" id="input-option" class="form-control" />
                  <span class="input-group-btn">
                  <button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button>
                  </span>
                </div>
              </div>
            </div>
            


         
            
          
            <div class="tab-content ">
              <div class="tab-pane active" id="tab-general">
                <ul class="nav nav-tabs" id="language">
                  {% for language in languages %}
                  <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                  {% endfor %}
                </ul>
                <div class="tab-content">{% for language in languages %}
                  <div class="tab-pane" id="language{{ language.language_id }}">
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-tnteventmanagementchild_title{{ language.language_id }}">{{ column_end_date }}</label>
                        <div class="col-sm-10">
                          <input type="text" name="tnteventmanagement[{{ language.language_id }}][tnteventmanagementchild_title]" value="{{ tnteventmanagement[language.language_id] ? tnteventmanagement[language.language_id].tnteventmanagementchild_title }}" placeholder="{{ column_end_date }}" id="input-name{{ language.language_id }}" class="form-control" />

                          <input type="hidden" name="tnteventmanagement[{{ language.language_id }}][lang]" value="{{ language.language_id }}" placeholder="{{ column_end_date }}" id="input-name{{ language.language_id }}" class="form-control" />
                        </div>
                      </div> 
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-tnteventmanagementchild_description{{ language.language_id }}">{{ column_description }}</label>
                        <div class="col-sm-10">
                          <input type="text" name="tnteventmanagement[{{ language.language_id }}][tnteventmanagementchild_description]" value="{{ tnteventmanagement[language.language_id] ? tnteventmanagement[language.language_id].tnteventmanagementchild_description }}" placeholder="{{ column_description }}" id="input-name{{ language.language_id }}" class="form-control" />

                          <input type="hidden" name="tnteventmanagement[{{ language.language_id }}][lang]" value="{{ language.language_id }}" placeholder="{{ column_description }}" id="input-name{{ language.language_id }}" class="form-control" />
                        </div>
                      </div>                  
                  </div>
                  {% endfor %}</div>
              </div>
            </div>

        </div>
      </div>
    </form>
  </div>

  <script type="text/javascript" src="view/javascript/summernote/summernote.js"></script>
  <link href="view/javascript/summernote/summernote.css" rel="stylesheet" />
  <script type="text/javascript" src="view/javascript/summernote/summernote-image-attributes.js"></script> 
  <script type="text/javascript" src="view/javascript/summernote/opencart.js"></script> 
  <script type="text/javascript"><!--
  $('.date').datetimepicker({
    language: '{{ datepicker }}',
    pickTime: false
  });
    $('#language a:first').tab('show');
    $('#languagew a:first').tab('show');
//--></script></div>
{{ footer }} 